<header class="flex flex-col">
  <section class="flex justify-between items-center border:border-b border-b-2 border-gray-300 h-[2.2rem]">
    <div class="mr-5">lol</div> 
    <div class="ml-[15%]">
      {% component 'footer.social' %}
    </div>
  </section>
  <section class="grid grid-cols-12 mt-3">
    <div class="col-span-3 flex justify-center w-full">
      <a href="{{ store.url }}">
        <img
          class="w-[3rem] h-[3rem] rounded-full"
          src="{{ store.logo }}"
          alt="{{ store.name }}"
        />
      </a>
    </div>
    <div class="col-span-6">
      <salla-search inline="true" height="50" class="rounded-xl"></salla-search>
    </div>
    <div class="col-span-3 flex justify-center items-center text-center">
      <salla-localization-modal language="ar" >
        <!-- you can customize the language dom item -->
        <div slot="language" class="cursor-pointer text-lg font-[600]" onclick="salla.event.emit(`localization::open`)">العملة</div>
      </salla-localization-modal>
      {% if user.type == "user" %}
      <salla-user-menu></salla-user-menu>
      {% else %}
      <a class="text-lg mx-3" style="cursor: pointer !important;" onclick="salla.event.dispatch('login::open')">
        <i class="icon sicon-user"></i>
      </a>
      {% endif %}
      <salla-cart-summary class="mr-2 text-lg text-violet-500">
        <i slot="icon" class="icon sicon-cart text-xl leading-none"></i>
      </salla-cart-sumary>
    </div>
  </section>  
</header>