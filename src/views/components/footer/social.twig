{#
| Variable     | Type   | Description                                                        |
|--------------|--------|--------------------------------------------------------------------|
| links        | array  | List of active social links                                        |
| links[].name | string |                                                                    |
| links[].type | string | instagram, twitter, snapchat, tiktok, youtube, facebook, pinterest |
| links[].icon | string | Css class                                                          |
| links[].url  | string |                                                                    |
#}
<ul class="flex">
  {% for link in links %}
    <li class="rtl:ml-2.5 ltr:mr-2.5 border-r border-l h-full border-gray-300 w-[2rem] text-center">
      <a href="{{ link.url }}" rel="noopener" target="_blank" title="{{ link.name }}" aria-label="{{ link.name }}" class="social-link text-lg">
          <i class="sicon-{{ link.type }}"></i>
      </a>
    </li>
  {% endfor %}
</ul>
