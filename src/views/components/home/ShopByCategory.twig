<section class="s-block s-block--default-home-slider s-block--full-bg">
    <salla-slider auto-play pagination type="fullwidth">
        <div slot="items">
            {% for banner in component.shopbycategoryban %}
            <div class="bg-no-repeat bg-cover swiper-lazy-wrap" style="background-color:black; background-image:url('{{banner.image}}')">
                <div class="container flex text-center items-center justify-conter sm:justify-start ltr:sm:justify-end px-8 py-16 lg:px-12 lg:py-20 home-slider__content relative h-full">
                    <div class="text-white w-full">
                        <h3 class='' data-swiper-parallax="-300">
                            {{banner.Title}}
                        </h3>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>
